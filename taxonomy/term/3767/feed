				&lt;a href=&quot;http://www.srichinmoycentre.org/inspiration-letters/authors#barney&quot;&gt;&lt;img alt=&quot;Dhiraja&quot; class=&quot;left&quot; height=&quot;70&quot; src=&quot;http://aum.vasudevaserver.netdna-cdn.com/cdn/farfuture/mgoC28aO-OgQ9WiMCVDs6NgO48dX9I0PE37IuMRMGTI/mtime:1325228943/files/inspiration-letters/images/portraits/barney&quot; style=&quot;width:55px; height:70px&quot; width=&quot;55&quot; /&gt;&lt;/a&gt;
				&lt;p&gt;&lt;strong&gt;&lt;a href=&quot;#dhiraja&quot;&gt;Pilgrim Runners&lt;/a&gt;&lt;/strong&gt;&lt;br /&gt;
					&lt;em&gt;&lt;a href=&quot;http://www.srichinmoycentre.org/inspiration-letters/authors#barney&quot;&gt;Dhiraja McBryde&lt;/a&gt;&lt;/em&gt;&lt;/p&gt;
			&lt;/td&gt;
			&lt;td align=&quot;left&quot; bgcolor=&quot;#e4fbd8&quot; valign=&quot;middle&quot; width=&quot;50%&quot;&gt;
				&lt;a href=&quot;http://www.srichinmoycentre.org/inspiration-letters/authors#mahiruha&quot;&gt;&lt;img alt=&quot;Mahiruha&quot; class=&quot;left&quot; height=&quot;70&quot; src=&quot;http://aum.vasudevaserver.netdna-cdn.com/cdn/farfuture/pdO_gd73JgsLykTmRTyRqOVDDbGLvTbhPK3je07auE8/mtime:1325228943/files/inspiration-letters/images/portraits/mahiruha&quot; width=&quot;55&quot; /&gt;&lt;/a&gt;
				&lt;p&gt;&lt;strong&gt;&lt;a href=&quot;#mahiruha&quot;&gt;Race Prayers&lt;/a&gt;&lt;/strong&gt;&lt;br /&gt;
					&lt;a href=&quot;http://www.srichinmoycentre.org/inspiration-letters/authors#mahiruha&quot;&gt;&lt;em&gt;Mahiruha Klein&lt;/em&gt;&lt;/a&gt;&lt;/p&gt;
			&lt;/td&gt;
